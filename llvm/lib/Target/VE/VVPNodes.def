// fp reductions (with strict)
#define HELPER_REDUCTION_NOVP(OP) \
ADD_REDUCE_VVP_OP(VVP_REDUCE_##OP,VECREDUCE_##OP) HANDLE_VVP_REDUCE_TO_SCALAR(VVP_REDUCE_##OP, OP)

#define HELPER_REDUCTION(OP) \
HELPER_REDUCTION_NOVP(OP)  HANDLE_VP_TO_VVP(VP_REDUCE_##OP, VVP_REDUCE_##OP)

#define HELPER_EXPAND_FPREDUCTIONS(OP) \
HELPER_REDUCTION(OP) \
HELPER_REDUCTION(SEQ_##OP)

HELPER_EXPAND_FPREDUCTIONS(FADD)
HELPER_EXPAND_FPREDUCTIONS(FMUL)

#undef HELPER_EXPAND_FPREDUCTIONS

